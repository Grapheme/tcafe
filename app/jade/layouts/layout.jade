- var title = "Т-Кафе"
- var headerClass = "";
- var bodyClass = "";

block vars

doctype html
html(class="#{bodyClass} no-js")
    head
        meta(charset="utf-8")
        title #{title}
        meta(name="description" content="")
        meta(name="viewport" content="width=device-width")
        link(rel="shortcut icon" href="/favicon.ico")
        // build:css(.) styles/vendor.css
        // bower:css
        // endbower
        // endbuild
        // build:css(.tmp) styles/main.css
        link(rel="stylesheet" href="styles/main.css")
        // endbuild

    body(class="#{bodyClass}")
      include ../includes/header.jade
      block content
      block footer
        include ../includes/footer.jade
      
      script(src='//maps.google.com/maps/api/js?sensor=true')
      script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js')

      block scripts

      // build:js({app,.tmp}) scripts/main.js
      script(src="scripts/modernizr.js")
      script(src="scripts/jquery.ui.map.js")
      script(src="scripts/jquery.validate.min.js")
      script(src="scripts/main.js")
      script(src="scripts/menu.js")
      script(src="scripts/photos.js")
      script(src="scripts/reviews.js")
      script(src="scripts/map.js")
      // endbuild

      